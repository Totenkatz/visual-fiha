{
  "private": true,
  "name": "visual-fiha",
  "version": "0.0.1",
  "description": "Zeropaper's web based VJing tool",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/zeropaper/visual-fiha.git"
  },
  "scripts": {
    "build": "npm run build-deps && npm run build-screen && npm run build-controller",
    "build-deps": "browserify ./src/deps.js -s VFDeps -o ./deps-build.js && npm run build-deps-add-ace",
    "build-deps-add-ace": "cp ./node_modules/ace-builds/src/worker-javascript.js ./ && cat ./node_modules/ace-builds/src/ace.js >> ./deps-build.js && cat ./node_modules/ace-builds/src/ext-language_tools.js >> ./deps-build.js && cat ./node_modules/ace-builds/src/mode-javascript.js >> ./deps-build.js && cat ./node_modules/ace-builds/src/theme-monokai.js >> ./deps-build.js",
    "build-screen": "browserify ./src/screen-app.js -o ./screen-build.js",
    "build-controller": "browserify ./src/controller-app.js -o ./controller-build.js",
    "dev-build-screen": "browserify ./src/screen-app.js -d | exorcist ./screen-build.js.map > ./screen-build.js",
    "dev-build-controller": "browserify ./src/controller-app.js -d | exorcist ./controller-build.js.map > ./controller-build.js",
    "dev": "nodemon -w \"./src\" -x \"eslint ./src && npm run dev-build-screen && npm run dev-build-controller\"",
    "dev-controller": "nodemon -w \"./src\" -x \"eslint ./src && npm run dev-build-controller\"",
    "dev-screen": "nodemon -w \"./src\" -x \"eslint ./src && npm run dev-build-screen\"",
    "test": "mocha -u bdd --check-leaks --full-trace test/**/state-spec.js",
    "postinstall": "npm run build"
  },
  "author": "Valentin Vago <zeropaper@irata.ch>",
  "license": "MIT",
  "dependencies": {
    "ace-builds": "^1.2.5",
    "ampersand-collection": "^2.0.0",
    "ampersand-state": "^5.0.2",
    "ampersand-view": "^10.0.1",
    "ampersand-view-switcher": "^2.1.0",
    "browserify": "^13.1.0",
    "css-element-queries": "^0.3.2",
    "exorcist": "^0.4.0",
    "expect.js": "^0.3.1",
    "lodash.assign": "^4.2.0",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.0.0",
    "mocha": "^3.1.2"
  },
  "devDependencies": {
    "eslint": "^3.9.1"
  }
}
