{
  "private": true,
  "name": "visual-fiha",
  "version": "0.0.1",
  "description": "Zeropaper's web based VJing tool",
  "main": "index.js",
  "engines": {
    "npm": "^3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/zeropaper/visual-fiha.git"
  },
  "scripts": {
    "test": "karma start ./test/karma.conf.js --single-run",
    "clean": "rimraf gh-pages",
    "copy-assets": "cp -r assets gh-pages/",
    "prebuild": "npm-run-all clean copy-assets",
    "build": "webpack --env.prod",
    "postinstall": "npm run build",
    "run:webpack": "webpack-dev-server --env.dev --port=8081",
    "run:karma": "karma start ./test/karma.conf.js",
    "run:wdio": "wdio ./test-e2e/wdio.conf.js",
    "run:dev": "npm-run-all clean copy-assets --parallel run:webpack run:karma",
    "test:e2e": "npm-run-all build run:wdio",
    "pregh-pages": "npm run clean && git clone -b gh-pages ./.git gh-pages && cd gh-pages && git remote set-url origin git@github.com:zeropaper/visual-fiha.git",
    "gh-pages": "npm run copy-assets && cd gh-pages/ && git add . && git commit --allow-empty -m \"update gh-pages\"",
    "postgh-pages": "echo \"You can now 'cd gh-pages && push origin gh-pages'\""
  },
  "author": "Valentin Vago <zeropaper@irata.ch>",
  "license": "MIT",
  "devDependencies": {
    "expect.js": "^0.3.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.1",
    "marked": "^0.3.6",
    "wdio": "latest",
    "wdio-mocha-framework": "^0.5.8",
    "wdio-selenium-standalone-service": "latest",
    "wdio-spec-reporter": "0.1.0",
    "wdio-static-server-service": "latest",
    "webpack-dev-server": "^2.2.0"
  },
  "dependencies": {
    "ace-builds": "^1.2.5",
    "ampersand-collection": "^2.0.0",
    "ampersand-events": "^2.0.2",
    "ampersand-router": "^4.0.0",
    "ampersand-state": "^5.0.2",
    "ampersand-view": "^10.0.1",
    "ampersand-view-switcher": "^2.1.0",
    "copy-webpack-plugin": "^4.0.1",
    "js-yaml": "^3.7.0",
    "localforage": "^1.4.3",
    "lodash.assign": "^4.2.0",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.0.0",
    "lodash.uniq": "^4.5.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.0.0",
    "ramda": "^0.23.0",
    "rimraf": "^2.5.4",
    "three": "^0.85.1",
    "webpack": "^2.2.1",
    "worker-loader": "^0.8.0",
    "yaml-loader": "^0.4.0"
  }
}
